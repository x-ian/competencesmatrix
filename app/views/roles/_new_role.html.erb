<h1>New role</h1>

<table>
  <colgroup>
    <col width="200">
    <col width="200">
    <col width="350">
  </colgroup>
  <% form_for(Role.new, :url => { :action => "create"}) do |f| %>
    <%= f.error_messages %>
    <tr>
      <td>
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </td>
      <td>
        <%= f.label :organizational_units%> <br/>(multiple tree)<br/>
        <%= select_tag("organizational_unit_ids[]",
          options_for_select(OrganizationalUnit.find(:all).collect { |unit| [unit.name , unit.id] },
            {}),
          {:multiple=>true, :size=>5}) %>
      </td>
      <td>
        <%= f.label :description %><br />
        <%= f.text_area :description, :size=>"40x4" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.submit "Add" %>
      </td>
    </tr>
  <% end %>
</table>
