<h1>Edit skill range</h1>

<table>
  <colgroup>
    <col width="200">
    <col width="200">
    <col width="200">
  </colgroup>
  <% form_for(@skill_range, :url => { :action => "update_skill_range", :id => @skill_range}) do |f| %>
    <%= f.error_messages %>
    <tr>
      <td>
        <%= f.label :value %><br/>
        <%= f.text_field :value%>
      </td>
      <td>
        <%= f.label :skill_model %><br />
        <%= f.collection_select(:skill_model_id, SkillModel.find(:all), :id, :name) %>
      </td>
      <td>
        <%= f.label :description %><br />
        <%= f.text_area :description, :size=>"40x4" %>
      </td>
    </tr>

    <tr>
      <td>
        <%= f.submit "Update" %>
      </td>
      <td>
        <%= link_to 'Back', :action => "index" %>
      </td>
      <td>
        <%= link_to 'Destroy', :id => @skill_range, :action => "destroy_skill_range", :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>
