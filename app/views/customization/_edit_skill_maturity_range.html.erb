<h1>Edit skill maturity range</h1>

<table>
  <colgroup>
    <col width="200">
    <col width="200">
    <col width="200">
    <col width="200">
  </colgroup>
  <% form_for(@skill_maturity_range, :url => { :action => "update_skill_maturity_range", :id => @skill_maturity_range}) do |f| %>
    <%= f.error_messages %>
    <tr>
      <td>
        <%= f.label :skill_model %><br />
        <%= f.collection_select(:skill_maturity_model_id, SkillMaturityModel.find(:all), :id, :name) %>
      </td>
      <td>
        <%= f.label :value %><br/>
        <%= f.text_field :value%>
      </td>
      <td>
        <%= f.label :default_maturity_range_description %><br/>
        <%= f.text_field :default_maturity_range_description %>
      </td>
      <td>
        <%= f.label :description %><br />
        <%= f.text_area :description, :size=>"40x4" %>
      </td>
    </tr>

    <tr>
      <td>
        <%= f.submit "Update" %>
      </td>
      <td>
        <%= link_to 'Back', :action => "index" %>
      </td>
      <td>
        <%= link_to 'Destroy', :id => @skill_maturity_range, :action => "destroy_skill_maturity_range", :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>
