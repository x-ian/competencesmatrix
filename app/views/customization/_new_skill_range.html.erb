<h1>New skill range</h1>

<table>
  <colgroup>
    <col width="200">
    <col width="200">
    <col width="200">
  </colgroup>
  <% form_for(SkillRange.new, :url => { :action => "create_skill_range"}) do |f| %>
    <%= f.error_messages %>
    <tr>
      <td>
        <%= f.label :value %><br/>
        <%= f.text_field :value %>
      </td>
      <td>
        <%= f.label :skill_model %><br />
        <%= f.collection_select(:skill_model_id, SkillModel.find(:all), :id, :name) %>
      </td>
      <td>
        <%= f.label :description %><br />
        <%= f.text_area :description, :size=>"40x4" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.submit "Add" %>
      </td>
    </tr>
  <% end %>
</table>
