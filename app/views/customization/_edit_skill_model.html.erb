<h1>Edit skill model</h1>

<table>
  <colgroup>
    <col width="200">
    <col width="350">
  </colgroup>
  <% form_for(@skill_model, :url => { :action => "update_skill_model", :id => @skill_model}) do |f| %>
    <%= f.error_messages %>
    <tr>
      <td>
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </td>
      <td>
        <%= f.label :description %><br />
        <%= f.text_area :description, :size=>"40x4" %>
      </td>
    </tr>

    <tr>
      <td>
        <%= f.submit "Update" %>
      </td>
      <td>
        <%= link_to 'Back', :action => "index" %>
      </td>
      <td>
        <%= link_to 'Destroy', :id => @skill_model, :action => "destroy_skill_model", :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>
