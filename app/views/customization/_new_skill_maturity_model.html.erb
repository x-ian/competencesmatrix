<h1>New skill maturity model</h1>

<table>
  <colgroup>
    <col width="200">
    <col width="200">
  </colgroup>
  <% form_for(SkillMaturityModel.new, :url => { :action => "create_skill_maturity_model"}) do |f| %>
    <%= f.error_messages %>
    <tr>
      <td>
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </td>
      <td>
        <%= f.label :description %><br />
        <%= f.text_area :description, :size=>"40x4" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.submit "Add" %>
      </td>
    </tr>
  <% end %>
</table>
